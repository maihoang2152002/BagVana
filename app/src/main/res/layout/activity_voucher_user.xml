<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_theme"
    android:orientation="vertical"
    tools:context=".Activity.Voucher.VoucherUserActivity">

    <android.widget.Toolbar
        android:id="@+id/toolbar_voucher_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:title="Payment Order">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Trang voucher"
        android:textColor="@color/title_text"
        android:textSize="@dimen/_20sdp" />
    </android.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_bg">

        <TextView
            android:id="@+id/txt_voucherOfShop"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Voucher của cửa hàng"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_voucherOfUser"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Voucher của tôi"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/input_bg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:text="Ưu đãi phí vận chuyển"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycview_freeshipVoucher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/input_bg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:text="Mã giảm giá"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycview_discountVoucher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>