<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.Profile.ChangePasswordActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="30dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@android:color/transparent"
                android:gravity="center"
                app:contentInsetEnd="0dp"
                app:contentInsetStartWithNavigation="0dp"
                app:title="Đổi mật khẩu"
                app:titleTextAppearance="@style/ToolbarTitleAppearance"
                tools:ignore="MissingConstraints">

            </androidx.appcompat.widget.Toolbar>


            <EditText
                android:id="@+id/editTxt_oldPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/rectangle_profile"
                android:hint="Mật khẩu cũ"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey" />

            <EditText
                android:id="@+id/editTxt_newPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/rectangle_profile"
                android:hint="Mật khẩu mới"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey" />

            <EditText
                android:id="@+id/editTxt_retypeNewPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/rectangle_profile"
                android:hint="Nhập lại mật khẩu mới"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey" />

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="18dp"
                android:background="@drawable/rectangle_profile"
                android:elevation="4dp"
                android:gravity="center"
                android:text="Xác nhận"
                android:textColor="@color/white"
                app:backgroundTint="@color/blue" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>