<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_product"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher_round"
            app:civ_border_color="#FF5722"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/nameId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@+id/img_product"
            android:text="Product Name"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/color_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameId"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@+id/img_product"
            android:text="Color"
            android:textColor="#757575"
            android:textSize="18sp" />



        <RelativeLayout
            android:id="@+id/relativelayout_price_fav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/color_product"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@+id/img_product">

            <TextView
                android:id="@+id/price_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="#272670"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imageBtn_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="false"
                android:layout_alignBaseline="@id/price_product"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:minWidth="30dp"
                android:minHeight="30dp"
                android:src="@drawable/ic_fav"
                tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />


        </RelativeLayout>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/MyRatingBar"
            android:numStars="5"
            android:stepSize="0.5"
            android:rating="3.5"
            android:layout_below="@+id/relativelayout_price_fav"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@+id/img_product"
            style="?android:attr/ratingBarStyleSmall" />

        <ImageView
            android:id="@+id/tag_free"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/tagfree"
            tools:ignore="ContentDescription,ImageContrastCheck" />

        <!--        <com.google.android.material.floatingactionbutton.FloatingActionButton-->
        <!--            android:id="@+id/btn_rating"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_alignParentTop="true"-->
        <!--            android:layout_alignParentRight="true"-->
        <!--            android:foregroundGravity="bottom|right|left"-->
        <!--            android:src="@drawable/ic_rate_us"-->

        <!--            app:pressedTranslationZ="12dp"-->
        <!--            app:useCompatPadding="true"-->
        <!--            tools:ignore="SpeakableTextPresentCheck" />-->

    </RelativeLayout>

</androidx.cardview.widget.CardView>