<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".Activity.Order.OrderAddressActivity">

    <android.widget.Toolbar
        android:id="@+id/toolbar_order_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:title="Order Address">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Địa chỉ nhận hàng"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </android.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycview_receiverInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/linear_newOrderAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/img_plus"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_margin="2dp"
            android:background="@drawable/ic_plus"/>

        <TextView
            android:id="@+id/txt_addNewAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Thêm địa chỉ mới"
            android:textColor="@color/blue"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>